<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-table-library-user" author="daniel.rissardi">
        <createTable tableName="library_user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <sql>
                DROP TABLE library_user;
                DELETE FROM DATABASECHANGELOG WHERE ID='create-table-library-user';
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="create-table-book" author="daniel.rissardi">
        <createTable tableName="book">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="isbn" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="publication_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <sql>
                DROP TABLE book;
                DELETE FROM DATABASECHANGELOG WHERE ID='create-table-book';
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="create-table-loan" author="daniel.rissardi">
        <createTable tableName="loan">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="library_user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="loan_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="return_date" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_loan_user"
                baseTableName="loan"
                baseColumnNames="library_user_id"
                referencedTableName="library_user"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                constraintName="fk_loan_book"
                baseTableName="loan"
                baseColumnNames="book_id"
                referencedTableName="book"
                referencedColumnNames="id"/>
        <rollback>
            <sql>
                ALTER TABLE loan DROP CONSTRAINT fk_loan_user;
                ALTER TABLE loan DROP CONSTRAINT fk_loan_book;
                DROP TABLE loan;
                DELETE FROM DATABASECHANGELOG WHERE ID='create-table-loan';
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>
